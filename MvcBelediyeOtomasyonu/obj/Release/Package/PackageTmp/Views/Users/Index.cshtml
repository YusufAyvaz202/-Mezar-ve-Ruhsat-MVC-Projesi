
@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <!-- Specific Page Vendor CSS -->
    <link rel="stylesheet" href="~/assets/vendor/select2/select2.css" />
    <link rel="stylesheet" href="~/assets/vendor/jquery-datatables-bs3/assets/css/datatables.css" />

    <link rel="stylesheet" href="~/assets/stylesheets/theme-custom.css">
</head>
<header class="page-header">
    <h2>@Html.ViewBag.title</h2>

    <div class="right-wrapper pull-right">
        <ol class="breadcrumbs">
            <li>
                <a href="~/Home">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li><span>@Html.ViewBag.title</span></li>
        </ol>

        <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fa fa-chevron-left"></i></a>
    </div>
</header>

<!-- start: page -->
<section class="panel">
    <header class="panel-heading">
        <div class="panel-actions">
            <a href="#" class="fa fa-caret-down"></a>
            <a href="#" class="fa fa-times"></a>
        </div>

        <h2 class="panel-title">
            <a href="~/Users/Yeni" type="button" class="mb-xs mt-xs mr-xs btn btn-info"><i class="fa fa-plus"></i>&nbsp;&nbsp;Yeni</a>
            <a href="~/Home" type="button" class="mb-xs mt-xs mr-xs btn btn-danger"><i class="fa fa-external-link"></i>&nbsp;&nbsp;Kapat</a>
        </h2>
    </header>
    <div class="panel-body">

        <table class="table table-bordered table-striped mb-none" id="datatable-default">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>AD</th>
                    <th>SOYAD</th>
                    <th>UNVAN</th>
                    <th>BİRİM</th>
                    <th>TC NO</th>
                    @*<th>KULLANICI ADI</th>
                        <th>ŞİFRE</th>*@
                    <th>EMAİL</th>
                    <th>TELEFON</th>
                    <th>KULLANICI TİPİ</th>
                    <th>DURUM</th>
                    <th>RESİM</th>
                    <th style="min-width:180px;width:180px">İŞLEMLER</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>@item.Id</td>
                        <td>@item.Ad</td>
                        <td>@item.Soyad</td>
                        <td>@item.Unvan</td>
                        <td>@item.Birim</td>
                        <td>@item.TcKimlikNo</td>
                        @*<td>@item.KullaniciAdi</td>
                            <td>@item.Sifre</td>*@
                        <td>@item.Email</td>
                        <td>@item.Telefon</td>
                        <td>@item.KullaniciTipleri.Tip</td>
                        @if (@item.Aktif == true)
                        {
                            <td class="text-center"><span class="label label-success">Aktif</span></td>
                        }
                        else
                        {
                            <td class="text-center"><span class="label label-danger">Pasif</span></td>
                        }
                        @if (item.ImagePath != null)
                        {
                            <td class="text-center"><img src="@item.ImagePath" style="width:100px; height:100px;" class="img-circle"/></td>
                        }
                        else
                        {
                            <td class="text-center"><img src="~/img/emty_user.png" style="width:100px; height:100px;" class="img-circle"/></td>
                        }

                        
                        <td>

                            @*<a href="~/Users/DetayGetir/@item.Id" type="button" class="mb-xs mt-xs mr-xs btn btn-success" data-toggle="tooltip" data-placement="top" title="Detaylar"><i class="fa fa-list"></i></a>*@

                            <a href="~/Users/BilgiGetir/@item.Id" type="button" class="mb-xs mt-xs mr-xs btn btn-primary" data-toggle="tooltip" data-placement="top" title="Düzenle"><i class="fa fa-pencil"></i></a>

                            <a href="~/Users/Sil/@item.Id" type="button" class="mb-xs mt-xs mr-xs btn btn-danger" data-toggle="tooltip" data-placement="top" title="Sil" onclick="return confirm('@item.Ad @item.Soyad kaydı silinsin mi?')"><i class="fa fa-eraser"></i></a>

                            <a href="~/Users/ResimSil?File=kullaniciresim&Id=@item.Id" type="button" class="mb-xs mt-xs mr-xs btn btn-danger" data-toggle="tooltip" data-placement="top" title="Resim Sil" onclick="return confirm('@item.Ad @item.Soyad kullanıcısının resmi silinsin mi?')">
                                <i class="fa fa-image"></i>
                            </a>


                        </td>

                    </tr>
                }



            </tbody>

        </table>
    </div>
</section>
<!-- end: page -->

@section scripts{

    <!-- Specific Page Vendor -->
    @*<script src="~/assets/vendor/select2/select2.js"></script>*@
    <script src="~/assets/vendor/jquery-datatables/media/js/jquery.dataTables.js"></script>
    <script src="~/assets/vendor/jquery-datatables-bs3/assets/js/datatables.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/assets/javascripts/theme.js"></script>

    <!-- Examples -->
    <script src="~/assets/javascripts/tables/examples.datatables.default.js"></script>



}




